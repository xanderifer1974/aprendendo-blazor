@page "/evento-alterar-fundo"

<label>Dados do Evento : Pressione a Tecla A para alterar a cor</label>
<div style="background-color: @cor; padding: 50px"></div>

<input type="text" @onkeypress="@(e => TeclaPressionada(e))" />

@code {

    private string cor = "red";

    private void TeclaPressionada(KeyboardEventArgs args)
    {
        if(args.Key =="A" || args.Key == "a")
        {
            cor = "blue";
            Console.WriteLine("A tecla A foi precionada");
        }
        else
        {
            cor = "red";
        }
    }
}
